<Page x:Class="kurs_project_PogodinaV.ThemesCombinatorics"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kurs_project_PogodinaV"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ThemesCombinatorics">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="91*"/>
            <RowDefinition Height="359*"/>
        </Grid.RowDefinitions>
        <Button 
            Grid.Row="0" 
            Height="30" 
            Width="100" 
            x:Name="GoBackBtn"
            Click="GoBackBtn_Click"
            Content="&lt;--"/>
        <ListView Grid.Row="1">
            <ListViewItem>
                <Button Content="Поочередный и одновременный выбор"/>
            </ListViewItem>

            <ListViewItem>
                <Button Content="Формулы числа сочетаний и перестановок"/>
            </ListViewItem>

            <ListViewItem>
                <Button Content="Бином Ньютона"/>
            </ListViewItem>
        </ListView>

        <Frame x:Name="FrameFr" Grid.RowSpan="2"/>
    </Grid>
</Page>
